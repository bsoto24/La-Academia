<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.openlab.perusemide_tecnico.fragment.TutorialFragment">

    <ImageView
        android:id="@+id/img_tuto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Circuito deportivo"
        android:textColor="@color/blanco"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Es la fase donde   los participantes se inician en la actividad física y el deporte, debiendo pasar por esta etapa para recibir aprestamiento motor, donde los profesores brindan una enseñanza lúdica"
        android:textColor="@color/blanco"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_entendido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Entendido"
        android:theme="@style/RaisedButtonAccent"
        android:visibility="gone" />
</LinearLayout>
