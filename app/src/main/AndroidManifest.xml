<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.openlab.perusemide_tecnico">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyThemeNoBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RegistroBeneficiarioActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.TutorialActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RegistroApoderadoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.BeneficiariosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.PerfilActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.EventosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.DeportesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ConfiguracionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.BeneficiarioActivity"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".activity.DetalleBeneficiarioActivity"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity android:name=".activity.ComplejosDeportivosActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activity.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity
            android:name=".activity.EventoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.InscripcionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.InscripcionExitosaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.DeporteActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>